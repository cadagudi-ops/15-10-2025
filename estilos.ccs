.galeria {
    position: relative;
    width: 80%;
    margin: 40px auto;
    text-align: center;
}

.galeria img {
    width: 100%;
    height: auto;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
}

button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: #333;
    color: #fff;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
}

#anterior {
    left: 0;
}

#siguiente {
    right: 0;
}
